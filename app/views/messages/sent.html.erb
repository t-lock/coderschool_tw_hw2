<br>
<h1 class="text-center"><strong><%= current_user.username %>'s history box</strong>&hellip; You have <%= @messages.count %> Sent Message(s)</h1>
<div class="row text-center">
  <%= image_tag("chatterbox_med_inverted.png", :alt => "Chatterbox Mark", :class => "logo logo-main") %>
</div>

<% if @messages.empty? %>
  <div class="alert alert-danger">No messages</div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    Inbox Messages
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Recipient:</th>
        <th>Subject:</th>
        <th>Opened at:</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.recipient.username %></td>
          <td><%= message.subject %></td>
          <% unless message.read_at %>
            <td>Still Unread</td>
          <% else %>
            <td><%= message.read_at %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<p class="text-right"><%= link_to "Go Back to Inbox", messages_path, class: 'btn btn-default btn-sm' %></p>

<%= render 'shared/actions' %>
