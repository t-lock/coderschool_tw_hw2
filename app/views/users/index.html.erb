<br>
<h1>Find Friends</h1>

<div class="panel panel-default">
  <div class="panel-heading">Users</div>
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Friendship</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td>
            <% if current_user.friends.include?(user.id) %>
              <%= link_to 'Remove Friend', remove_friend_path(:id => user.id), class: 'btn btn-danger' %>
            <% else %>
              <%= link_to 'Add Friend', add_friend_path(:id => user.id), class: 'btn btn-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render 'shared/actions' %>

